<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.emg.projectsmanage.dao.process.ProcessConfigModelDao">
	<resultMap id="BaseResultMap"
		type="com.emg.projectsmanage.pojo.ProcessConfigModel">
		<id column="id" property="id" jdbcType="INTEGER" />
		<result column="moduleid" property="moduleid" jdbcType="INTEGER" />
		<result column="moduleName" property="moduleName" jdbcType="VARCHAR" />
		<result column="name" property="name" jdbcType="VARCHAR" />
		<result column="typeid" property="typeid" jdbcType="INTEGER" />
		<result column="type" property="type" jdbcType="VARCHAR" />
		<result column="style" property="style" jdbcType="VARCHAR" />
		<result column="control" property="control" jdbcType="VARCHAR" />
		<result column="defaultValue" property="defaultValue" jdbcType="VARCHAR" />
	</resultMap>
	<select id="selectAllConfigDBModels" resultType="java.util.Map">
		SELECT *
		FROM tb_config_db
	</select>
	<select id="selectAllProcessConfigModels" resultMap="BaseResultMap">
		SELECT
			tc.`id`,
			tc.`moduleid`,
			tcm.`name` AS modulename,
			tc.`name`,
			tc.`type` AS typeid,
			tct.`type`,
			tct.`style`,
			tct.`control`,
			tc.`defaultvalue`
		FROM
			tb_config tc
		JOIN tb_config_module tcm ON tc.moduleid = tcm.id
		JOIN tb_config_type tct ON tc.type = tct.id
	</select>
	<update id="updateDefaultValueSelective" parameterType="com.emg.projectsmanage.pojo.ProcessConfigModel">
		update tb_config
		<set>
			<if test="defaultValue != null">
				defaultValue = #{defaultValue,jdbcType=VARCHAR},
			</if>
		</set>
		where id = #{id,jdbcType=INTEGER}
	</update>
	<select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		SELECT
			tc.`id`,
			tc.`moduleid`,
			tcm.`name` AS modulename,
			tc.`name`,
			tc.`type` AS typeid,
			tct.`type`,
			tct.`style`,
			tct.`control`,
			tc.`defaultvalue`
		FROM
			tb_config tc
		JOIN tb_config_module tcm ON tc.moduleid = tcm.id
		JOIN tb_config_type tct ON tc.type = tct.id
		WHERE tc.`id` = #{id,jdbcType=INTEGER}
	</select>
</mapper>